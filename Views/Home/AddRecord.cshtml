@{
    ViewData["Title"] = "Add Record";
}

@model intex.Models.Burialmain

<form method="post" style="margin:30px">
    <div asp-validation-summary="All"></div>

    <input asp-for="Id" hidden />
    <!-- <label asp-for="id">ID:</label>
    <input asp-for="id"/> -->
    <label asp-for="Depth">Burial Depth:</label>
    <input asp-for="Depth" />
    <br /><br />

    <label asp-for="Sex">Sex:</label>
    <select asp-for="Sex">
        <option value="">Choose a sex</option>
        <option value="M">Male</option>
        <option value="F">Female</option>
    </select>
    <br /><br />
    <br /><br />

    <label asp-for="Haircolor">Hair Color:</label>
    <select asp-for="Haircolor">
        <option value="">Choose a color</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="D">D</option>
        <option value="R">R</option>
        <option value="T">T</option>
        <option value="K">K</option>
        <option value="Y">Y</option>

    </select>
    <br /><br />

    <label asp-for="Headdirection">Head Direction:</label>
    <input asp-for="Headdirection" />
    <br /><br />

    <label asp-for="Squarenorthsouth">Square North South:</label>
    <input asp-for="Squarenorthsouth" />
    <br /><br />

    <label asp-for="Northsouth">North South:</label>
    <select asp-for="Northsouth">
        <option value="">Choose a direction</option>
        <option value="N">North</option>
        <option value="S">South</option>
    </select>
    <br /><br />

    <label asp-for="Squareeastwest">Square East West:</label>
    <input asp-for="Squareeastwest" />
    <br /><br />

    <label asp-for="Eastwest">East West:</label>
    <select asp-for="Eastwest">
        <option value="">Choose a direction</option>
        <option value="E">East</option>
        <option value="W">West</option>
    </select>
    <br /><br />

    <label asp-for="Area">Area:</label>
    <input asp-for="Area" />
    <br /><br />

    <label asp-for="Burialnumber">Burial Number:</label>
    <input asp-for="Burialnumber" />
    <br /><br />

    <label asp-for="Wrapping">Wrapping:</label>
    <select asp-for="Wrapping">
        <option value="B">B</option>
        <option value="H">H</option>
        <option value="W">W</option>
    </select>
    <br /><br />

    <label asp-for="Length">Length:</label>
    <input asp-for="Length" />
    <br /><br />

    <label asp-for="Ageatdeath">Age at Death:</label>
    <input asp-for="Ageatdeath" />
    <br /><br />

    <label asp-for="Text">Notes:</label>
    <input asp-for="Text" />
    <br /><br />

    <button class="button button-primary" type="submit">Publish Record</button>
</form>